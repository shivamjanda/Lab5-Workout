@model Lab5Workout.Models.Workout
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>

<body>
    <h1>Edit</h1>

    <h4>Workout</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="workoutID" />
                <div class="form-group">
                    <label asp-for="workoutName" class="control-label"></label>
                    <input asp-for="workoutName" class="form-control" />
                    <span asp-validation-for="workoutName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="sets" class="control-label"></label>
                    <input asp-for="sets" class="form-control" />
                    <span asp-validation-for="sets" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="reps" class="control-label"></label>
                    <input asp-for="reps" class="form-control" />
                    <span asp-validation-for="reps" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="notes" class="control-label"></label>
                    <input asp-for="notes" class="form-control" />
                    <span asp-validation-for="notes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
