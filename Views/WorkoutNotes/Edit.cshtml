@model Lab5Workout.Models.WorkoutNotes
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Edit";
}
<head>
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<h1>Edit</h1>

<h4>CaloriesBurned</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="wID" />
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="workoutID" class="control-label"></label>
                <select asp-for="workoutID" class="form-control" asp-items="ViewBag.workoutID"></select>
                <span asp-validation-for="workoutID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
